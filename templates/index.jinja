{% from "/components/navbar.jinja" import navbar %}

<!doctype html>
<html lang="en" class="gruvbox-dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>peppidesu.dev</title>
        <link rel="stylesheet" href="/public/css/style.css" />
        <link rel="stylesheet" href="/public/font/maple-mono.css" />
    </head>
    <body>
        {{ navbar("") }}
        <main>
            <article>
                <h1>Welcome to peppidesu.dev</h1>
                {{ content | safe }}
            </article>
            <aside>
                <h1>Recent posts</h1>
                <ul class="post-list">
                    {% for post in posts %}
                        <li>
                            <a href="{{ post.url }}">{{ post.title }}</a>
                            <span class="dotrule"></span>
                            <span class="date">{{ post.date }}</span>
                        </li>
                    {% endfor %}
                </ul>
                <div class="hrule"></div>


            </aside>
        </main>
    </body>
</html>
